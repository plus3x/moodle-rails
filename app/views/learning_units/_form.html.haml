= form_for @learning_unit do |f|
  - if @learning_unit.errors.any?
    #error_explanation
      %h2= "#{pluralize(@learning_unit.errors.count, "error")} prohibited this learning_unit from being saved:"
      %ul
        - @learning_unit.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :title
    = f.text_field :title
  .field
    = f.label :course
    = f.text_field :course
  .actions
    = f.submit 'Save'
