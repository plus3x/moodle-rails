#login_form
  = form_tag do
    %fieldset
      %legend= t '.please_log_in'
      %div
        = label_tag t :login
        %br
        = text_field_tag :login, params[:login]
      %div
        = label_tag t :password
        %br
        = password_field_tag :password, params[:password]
      %div
        = submit_tag t :login
