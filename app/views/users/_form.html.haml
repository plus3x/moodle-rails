= simple_form_for @user, class: 'form-horizontal' do |f|
  = f.error_notification

  .form-controlls
    = f.input :login
    = f.input :password
    = f.input :email
    = f.input :role, collection: User.roles, prompt: false
    = f.input :first_name
    = f.input :last_name
    = f.input :city
    = f.input :country

  .form-actions
    = f.button :submit
